<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/investDB?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create all database on startup -->

        <property name="hibernate.current_session_context_class">thread</property>
        <mapping class="ua.goit.startupserviceapp.model.Category"/>
        <mapping class="ua.goit.startupserviceapp.model.Startup"/>
        <mapping class="ua.goit.startupserviceapp.model.UserDB"/>
        <mapping class="ua.goit.startupserviceapp.model.StartupEvaluation"/>
        <mapping class="ua.goit.startupserviceapp.model.UserStartup"/>
        <mapping class="ua.goit.startupserviceapp.model.Permission"/>

    </session-factory>
</hibernate-configuration>